@{
}
<div class="text-center">
    <h3>Our Current Jobs</h3>
    @Html.ActionLink("Add a new job", "Create")
</div>
@foreach (var Job in Model)
{
    <ul>
        <li>@Job.Title</li>
        <ul>
            <li>@Job.Description</li>
        </ul>
        @if (Job.Worker == null)
        {
        <li class="btn">This job is unclaimed. @Html.ActionLink("Claim This Job", "Claim", new { @text = @Job.Title, id = Job.JobId })</li>
        }
        else
        {
            <li class="btn">This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName <button class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = Job.JobId })</button></li>
            <ol>
                <li>Status:@if (@Job.Pending)
                { <p>Active</p> }
                else { <p>Inactive</p>}
                </li>
                <li>
                    Completion:@if (@Job.Completed)
                    { <p>Completed</p> }
                    else
                    { <p>Not completed</p>}
                </li>
            </ol>

        }
    </ul>


    <hr />
}

